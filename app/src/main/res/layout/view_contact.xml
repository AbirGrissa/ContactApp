<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="30px">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="76dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:src="@drawable/baseline_account_box_24"
        app:srcCompat="@drawable/baseline_account_box_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNom_Contact"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:text="NomContact"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrenom_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="prenomContact" />

            <TextView
                android:id="@+id/tvNum_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:text="numeroContact" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTel_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="50px"
                android:layout_weight="1"
                android:src="@drawable/baseline_phone_enabled_24"
                app:srcCompat="@drawable/baseline_phone_enabled_24" />

            <ImageView
                android:id="@+id/ivEdit_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:layout_weight="1"
                android:src="@drawable/baseline_edit_24"
                app:srcCompat="@drawable/baseline_edit_24" />

            <ImageView
                android:id="@+id/ivDelete_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_delete_forever_24"
                app:srcCompat="@drawable/baseline_delete_forever_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>